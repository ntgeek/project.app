<!--pages/information/information.wxml-->

<view wx:if="{{isHide}}" class="w">
  <view wx:if="{{canIUse}}">
    <view class='header'>
      <image src='/static/images/weixin_1.png'></image>
    </view>

    <view class='content'>
      <view>申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
    </view>

    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
      授权登录
    </button>
  </view>
  <view wx:else>请升级微信版本</view>
</view>
<view class="content" wx:if="{{!isHide}}">
<view class="nav">
  <view class="userinfo-ava">
<open-data type="userAvatarUrl" id="userinfo"></open-data>
</view>
<view class="enter">
<view class="chan1" id="ct1"><text>姓名</text><input class="input" name="user" placeholder="输入姓名" value="{{userName}}" bindblur="uName"/></view>
<view class="chan1" ><text>学号</text><input class="input" placeholder="输入学号" value="{{userNumbel}}" bindblur="uNumber"/></view>
<view class="chan"><picker bindchange="bindPickerChange1" value="{{index}}" range="{{array1}}" class="br" bindchange="bindxueyuan" ><text class="pickchan">学院</text><text class="wx">{{array1[index]}}</text></picker><view class="wx1">{{array1.index}}</view></view>
<view class="chan" id="ct2"><picker bindchange="bindarea" value="{{index}}" range="{{array2}}" class="br"><text class='pickchan'>地区</text><text class="wx">{{array2[index1]}}</text></picker><view class='wx1'>{{array2.index2}}</view></view>
<button class="btn" bindtap="f1"><text id='t1'>确定</text></button>
</view>
</view>
</view>